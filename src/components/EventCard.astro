---
interface Props {
  title: string;
  date: string;
  location: string;
  coverImage?: string;
  slug: string;
}

const { title, date, location, coverImage, slug } = Astro.props;
const eventDate = new Date(date);
const formattedDate = eventDate.toLocaleDateString('tr-TR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});
---

<a href={`/etkinlikler/${slug}`} class="block group">
  <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg hover:border-primary-300 transition-all duration-300">
    {coverImage && (
      <div class="relative h-48 sm:h-56 overflow-hidden bg-gray-100">
        <img 
          src={coverImage} 
          alt={title}
          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
          loading="lazy"
        />
      </div>
    )}
    <div class="p-4 sm:p-6">
      <div class="flex flex-col sm:flex-row sm:flex-wrap sm:items-center gap-2 sm:gap-3 text-sm text-gray-600 mb-3">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-medium">{formattedDate}</span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="font-medium">{location}</span>
        </div>
      </div>
      <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors leading-tight">
        {title}
      </h3>
      <div class="pt-3 border-t border-gray-100">
        <span class="text-primary-600 text-sm font-medium group-hover:text-primary-700">
          Detayları Gör →
        </span>
      </div>
    </div>
  </article>
</a>

