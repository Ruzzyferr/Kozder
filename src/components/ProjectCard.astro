---
interface Props {
  title: string;
  summary: string;
  coverImage: string;
  programType: 'ESC' | 'ERASMUS';
  year: number;
  status: 'Aktif' | 'Tamamlandı';
  slug: string;
}

const { title, summary, coverImage, programType, year, status, slug } = Astro.props;
const statusColors = {
  'Aktif': 'bg-green-100 text-green-800',
  'Tamamlandı': 'bg-gray-100 text-gray-800',
};
---

<a href={`/projeler/${slug}`} class="block group">
  <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg hover:border-primary-300 transition-all duration-300 h-full flex flex-col">
    {coverImage && (
      <div class="relative h-48 sm:h-56 overflow-hidden bg-gray-100">
        <img 
          src={coverImage} 
          alt={title}
          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
          loading="lazy"
        />
        <div class="absolute top-2 right-2 sm:top-4 sm:right-4">
          <span class={`px-2 py-1 sm:px-3 sm:py-1.5 rounded-full text-xs font-semibold backdrop-blur-sm ${statusColors[status]}`}>
            {status}
          </span>
        </div>
        <div class="absolute top-2 left-2 sm:top-4 sm:left-4">
          <span class="px-2 py-1 sm:px-3 sm:py-1.5 rounded-full text-xs font-semibold bg-white/90 text-primary-700 backdrop-blur-sm">
            {programType}
          </span>
        </div>
      </div>
    )}
    <div class="p-4 sm:p-6 flex-1 flex flex-col">
      <div class="flex items-center justify-between mb-3">
        {!coverImage && (
          <span class="text-sm font-semibold text-primary-600">{programType}</span>
        )}
        <span class="text-sm text-gray-500 font-medium">{year}</span>
      </div>
      <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors leading-tight">
        {title}
      </h3>
      <p class="text-gray-600 text-sm flex-1 line-clamp-3 leading-relaxed">
        {summary}
      </p>
      <div class="mt-4 pt-4 border-t border-gray-100">
        <span class="text-primary-600 text-sm font-medium group-hover:text-primary-700">
          Detayları Gör →
        </span>
      </div>
    </div>
  </article>
</a>

