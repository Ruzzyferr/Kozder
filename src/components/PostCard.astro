---
interface Props {
  title: string;
  summary: string;
  date: string;
  tags: string[];
  slug: string;
}

const { title, summary, date, tags, slug } = Astro.props;
const postDate = new Date(date);
const formattedDate = postDate.toLocaleDateString('tr-TR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});
---

<a href={`/duyurular/${slug}`} class="block group">
  <article class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6 hover:shadow-lg hover:border-primary-300 transition-all duration-300 h-full flex flex-col">
    <div class="flex items-center text-xs sm:text-sm text-gray-600 mb-3">
      <svg class="w-4 h-4 mr-2 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span class="font-medium">{formattedDate}</span>
    </div>
    <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors leading-tight">
      {title}
    </h3>
    <p class="text-gray-600 text-sm mb-4 line-clamp-3 flex-1 leading-relaxed">
      {summary}
    </p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => (
          <span class="px-2 sm:px-2.5 py-1 bg-primary-50 text-primary-700 text-xs rounded-full font-medium">
            {tag}
          </span>
        ))}
      </div>
    )}
    <div class="pt-3 border-t border-gray-100">
      <span class="text-primary-600 text-sm font-medium group-hover:text-primary-700">
        Devamını Oku →
      </span>
    </div>
  </article>
</a>

