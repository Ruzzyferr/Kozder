---
interface Props {
  items: Array<{ label: string; href: string }>;
  pageTitle?: string;
}

const { items, pageTitle } = Astro.props;
---

<div class="bg-primary-700 text-white relative overflow-hidden">
  <!-- Cloud pattern background -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-5 left-10 w-24 h-24 bg-white rounded-full blur-2xl"></div>
    <div class="absolute top-10 right-20 w-32 h-32 bg-white rounded-full blur-3xl"></div>
  </div>
  
  <div class="container mx-auto px-4 py-3 sm:py-4 relative z-10">
    {pageTitle && (
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-2 sm:mb-3 uppercase tracking-wide">
        {pageTitle}
      </h1>
    )}
    <nav class="flex flex-wrap items-center gap-1.5 sm:gap-2 text-xs sm:text-sm">
      {items.map((item, index) => (
        <>
          {index > 0 && <span class="text-white/60 hidden sm:inline">|</span>}
          {index === items.length - 1 ? (
            <span class="font-semibold uppercase text-white">{item.label}</span>
          ) : (
            <a href={item.href} class="hover:text-white/80 uppercase transition-colors text-white/90">
              {item.label}
            </a>
          )}
        </>
      ))}
    </nav>
  </div>
</div>

