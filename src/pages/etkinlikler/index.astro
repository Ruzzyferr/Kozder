---
import BaseLayout from '../../layouts/BaseLayout.astro';
import EventCard from '../../components/EventCard.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';

const events = await getCollection('events');
const sortedEvents = events.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout 
  title="Etkinlikler - KOZ-DER"
  description="Düzenlediğimiz etkinlikler ve aktiviteler hakkında bilgi edinin."
>
  <Breadcrumb 
    items={[
      { label: 'Ana Sayfa', href: '/' },
      { label: 'Etkinlikler', href: '/etkinlikler' }
    ]}
    pageTitle="Etkinliklerimiz"
  />
  
  <div class="container mx-auto px-4 py-8 sm:py-12 md:py-16">
    
    {sortedEvents.length > 0 ? (
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        {sortedEvents.map((event) => (
          <EventCard
            title={event.data.title_tr}
            date={event.data.date}
            location={event.data.location}
            coverImage={event.data.coverImage}
            slug={event.slug}
          />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">Henüz etkinlik eklenmemiş.</p>
      </div>
    )}
  </div>
</BaseLayout>

